{
  "name": "pandora-box",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "prepare": "git config core.hooksPath .git-hooks || echo 'Not in a git repo'",
    "dev": "vite dev",
    "client:build": "vite build",
    "client:preview": "vite preview",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "test:unit": "vitest --run",
    "test:pw": "playwright test",
    "test": "npm run test:unit && npm run test:pw",
    "server": "bun run --watch server/index.ts",
    "server:build": "bun build server/index.ts --target bun --outdir ./build",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "devDependencies": {
    "@eslint/compat": "1.4.0",
    "@eslint/js": "9.37.0",
    "@playwright/test": "1.56.1",
    "@tsconfig/node22": "22.0.2",
    "@types/jsdom": "27.0.0",
    "@vitejs/plugin-vue": "6.0.1",
    "@vitest/browser": "3.2.4",
    "@vitest/eslint-plugin": "1.3.20",
    "@vue/eslint-config-prettier": "10.2.0",
    "@vue/eslint-config-typescript": "14.6.0",
    "@vue/test-utils": "2.4.6",
    "@vue/tsconfig": "0.8.1",
    "bun-types": "1.3.0",
    "drizzle-kit": "0.31.5",
    "drizzle-orm": "0.44.6",
    "eslint": "9.37.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-playwright": "2.2.2",
    "eslint-plugin-vue": "10.5.1",
    "globals": "16.4.0",
    "jsdom": "27.0.0",
    "lint-staged": "16.2.4",
    "playwright": "1.56.1",
    "prettier": "3.6.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.1",
    "vite": "7.1.10",
    "vite-plugin-vue-devtools": "8.0.3",
    "vitest": "3.2.4"
  },
  "dependencies": {
    "@elysiajs/cors": "1.4.0",
    "@elysiajs/openapi": "1.4.11",
    "@elysiajs/static": "1.4.0",
    "@unocss/reset": "66.5.4",
    "@vueuse/core": "13.9.0",
    "elysia": "1.4.10",
    "pinia": "3.0.3",
    "unocss": "66.5.4",
    "valibot": "1.1.0",
    "vue": "3.5.22",
    "vue-router": "4.6.3",
    "vue-standard-schema": "4.0.1",
    "wretch": "2.11.0"
  },
  "lint-staged": {
    "*.(js|ts|vue|html|css|json|md)": "prettier --write",
    "*.(js|ts|vue)": "eslint --fix"
  }
}
