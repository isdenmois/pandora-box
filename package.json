		"svelte": "5.38.10",
		"svelte-check": "4.3.1",
		"typescript": "5.9.2",
		"typescript-eslint": "8.44.0",
		"vite": "7.1.5",
		"vitest": "3.2.4",
		"vitest-browser-svelte": "1.1.0"
	},
	"dependencies": {
		"@node-rs/argon2": "2.0.2",
		"svelte-adapter-bun": "^0.5.2"
	}
